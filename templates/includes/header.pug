nav.header-main.navbar.navbar-expand-lg.bg-body-tertiary.mb-4
  .container
    a.navbar-brand(href=`/${locale}/`) #{setting('metaTitle')}
    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbar-nav" aria-controls="navbar-nav" aria-expanded="false" aria-label="Toggle navigation")
      span.navbar-toggler-icon

    #navbar-nav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link(href=`/${locale}/`) #{t('home')}
        li.nav-item
          a.nav-link(href=`/${locale}/`) #{t('about')}
        li.nav-item
          a.nav-link(href=`/${locale}/`) #{t('contact')}

      ul.navbar-nav.ms-auto
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' id='localeDropdown', role='button', data-bs-toggle='dropdown', aria-expanded='false') #{t('locale')}
          ul.dropdown-menu
            each item in locales
              li
                a.dropdown-item(href=url + '?lang=' + item)= t(item)
