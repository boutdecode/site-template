extends ../base

block content

    header.bg-white.p-3.mb-3.border-bottom
        nav
            ol.breadcrumb.m-0
                li.breadcrumb-item
                    a(href=get('admin_dashboard'))= trans('home')
                li.breadcrumb-item.active= trans('users')

    section.container-fluid

        div.m-4.p-4.bg-white.rounded.border.shadow-sm
            h1.d-flex.align-items-center.h2.mb-4
                i.me-2(icon-name="users", width=26, height=26, stroke-width=3)
                span= trans('manage_users')

            form.w-50.d-flex.justify-content-start(action=get('admin_users'))
                input#search.form-control.me-2(type="text", name="search", placeholder=trans('searching'))

                select#limit.form-select.me-2(name="limit")
                    option(value=25) 25
                    option(value=50) 50
                    option(value=100) 100

                button.d-flex.align-items-center.btn.btn-outline-secondary
                    i.me-2(icon-name="search")
                    span= trans('search')

            table.table
                thead
                    tr
                        th #
                        th= trans('username')
                        th= trans('activated')
                        th.text-end= trans('button_actions')

                tbody
                    each user in users
                        tr
                            td= user._id
                            td= user.username
                            td True
                            td.text-end
                                div.btn-group.btn-group-sm
                                    button.d-flex.align-items-center.btn.btn-primary
                                        i.me-1(icon-name="pencil", width=18, height=18)
                                        span= trans('edit')

                                    button.d-flex.align-items-center.btn.btn-danger
                                        i.me-1(icon-name="trash", width=18, height=18)
                                        span= trans('delete')
